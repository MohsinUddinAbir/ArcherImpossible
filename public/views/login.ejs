      <meta name="csrf-token" content="<%= csrfToken %>" />
      <title>Login / Register | Archer Impossible | World's Hardest Game | Minecraft Edition</title>
      <link rel="stylesheet" href="../css/design.css" />
   </head>

   <body style="background-image: url(../images/login_bkg.jpg)">
      <audio autoplay loop src="../audio/epic adventure music.mp3"></audio>

      <header><%- include('navbar'); %></header>

      <!--Login and Registry form for user that will send info inputted and be checked with data storage and javascript-->
      <div class="login-register">
         <div class="login">
            <form method="post" action="/login">
               <h1><u>Login</u></h1>
               <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
               <label for="log_email">Email</label>
               <input type="text" id="log_email" name="username" placeholder="Email" />
               <label for="log_password">Password</label>
               <input type="password" id="log_password" name="password" placeholder="*******" />

               <button class="login-btn" type="submit">Login</button>

               <div class="out_result">
                  <% if (hasMessages) { %>
                  <section class="messages">
                     <% messages.forEach(function(message) { %>
                     <p><%= message %></p>
                     <% }); %>
                  </section>
                  <% } %>
               </div>
            </form>
         </div>

